<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_movie_background"
    tools:context=".ui.DetailActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#181B47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="10dp"
                android:hint="@string/title"
                style="@style/textColorStyle"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_releaseDate"
                android:layout_marginTop="10dp"
                android:hint="@string/releaseDate"
                style="@style/textColorStyle"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_voteAverage"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                style="@style/voteAverageStyle"
                android:hint="@string/voteAverage"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:hint="@string/overview"
                style="@style/textColorStyle"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                android:textStyle="italic" />
            <Button
                android:id="@+id/btn_addToFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_to_favorites"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>